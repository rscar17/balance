        function renderCategories(containerId, categoryData, maxTotal) {
            var container = document.getElementById(containerId);
            var sortedCategories = Object.entries(categoryData).sort(function(a, b) { return b[1].total - a[1].total; });
            var html = '';
            
            sortedCategories.forEach(function(entry) {
                var name = entry[0];
                var data = entry[1];
                var catInfo = categoryColors[name] || { color: 'var(--text-muted)', icon: 'üìÅ', key: 'other' };
                var percentage = (data.total / maxTotal) * 100;
                var isAI = name === 'Subscriptions';
                
                var itemsHtml = '';
                data.items.forEach(function(item) {
                    itemsHtml += '<div class="dropdown-item"><span class="dropdown-item-name">' + item.name + '</span><span class="dropdown-item-amount">$' + item.amount.toFixed(2) + '</span></div>';
                });
                
                html += '<div class="category-card ' + (isAI ? 'ai-highlight' : '') + '" data-category="' + catInfo.key + '">' +
                    '<div class="category-main" onclick="toggleCategory(this)">' +
                        '<div><div class="category-name">' + name + '</div><div class="category-amount">$' + data.total.toFixed(2) + '</div></div>' +
                        '<div style="display: flex; flex-direction: column; align-items: center; gap: 8px;"><div class="category-icon">' + catInfo.icon + '</div><div class="category-expand-icon">‚ñº</div></div>' +
                    '</div>' +
                    '<div class="category-bar"><div class="category-bar-fill" style="width: ' + percentage + '%;"></div></div>' +
                    '<div class="category-dropdown">' + itemsHtml + '</div>' +
                '</div>';
            });
            
            container.innerHTML = html;
        }

        function toggleCategory(element) {
            var card = element.closest('.category-card');
            card.classList.toggle('expanded');
        }

        function renderTransactions(containerId, transactions, filter) {
            var container = document.getElementById(containerId);
            var filtered = transactions;
            
            if (filter === 'income') filtered = transactions.filter(function(t) { return t.amount > 0; });
            else if (filter === 'expense') filtered = transactions.filter(function(t) { return t.amount < 0; });

            if (filtered.length === 0) {
                container.innerHTML = '<div class="empty-state"><p>No transactions match this filter.</p></div>';
                return;
            }

            var grouped = {};
            filtered.forEach(function(t) {
                if (!grouped[t.date]) grouped[t.date] = [];
                grouped[t.date].push(t);
            });

            var html = '';
            Object.keys(grouped).forEach(function(date) {
                html += '<div class="transaction-date-header">' + date + '</div>';
                grouped[date].forEach(function(t) {
                    var amountClass = t.amount >= 0 ? 'positive' : 'negative';
                    var amountStr = (t.amount >= 0 ? '+' : '') + '$' + Math.abs(t.amount).toFixed(2);
                    html += '<div class="transaction-item"><div class="transaction-info"><div class="transaction-name">' + t.name + '</div><div class="transaction-category">' + t.category + '</div></div><div class="transaction-amount ' + amountClass + '">' + amountStr + '</div></div>';
                });
            });
            container.innerHTML = html;
        }

        function renderDonut(svgId, legendId, categoryData) {
            var svg = document.getElementById(svgId);
            var legend = document.getElementById(legendId);
            var centerLabel = svg.parentElement.querySelector('.total-label');
            var centerAmount = svg.parentElement.querySelector('.total-amount');
            
            var circles = svg.querySelectorAll('circle:not(:first-child)');
            circles.forEach(function(c) { c.remove(); });
            
            var sortedData = Object.entries(categoryData).map(function(entry) {
                return { name: entry[0], value: entry[1].total };
            }).sort(function(a, b) { return b.value - a.value; });
            
            var total = sortedData.reduce(function(sum, d) { return sum + d.value; }, 0);
            var circumference = 2 * Math.PI * 70;
            var offset = 0;

            sortedData.forEach(function(d, i) {
                var catInfo = categoryColors[d.name] || { color: 'var(--text-muted)' };
                var percent = d.value / total;
                var length = circumference * percent;
                
                var circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
                circle.setAttribute('cx', '100');
                circle.setAttribute('cy', '100');
                circle.setAttribute('r', '70');
                circle.setAttribute('fill', 'none');
                circle.setAttribute('stroke', catInfo.color);
                circle.setAttribute('stroke-width', '20');
                circle.setAttribute('stroke-dasharray', length + ' ' + circumference);
                circle.setAttribute('stroke-dashoffset', -offset);
                circle.style.cursor = 'pointer';
                
                (function(catName, catValue, catColor) {
                    circle.addEventListener('mouseenter', function() {
                        var allCircles = svg.querySelectorAll('circle:not(:first-child)');
                        allCircles.forEach(function(c) { if (c !== circle) c.style.opacity = '0.3'; });
                        circle.setAttribute('stroke-width', '24');
                        centerLabel.textContent = catName;
                        centerAmount.textContent = '$' + catValue.toFixed(0);
                        centerAmount.style.color = catColor;
                    });
                    circle.addEventListener('mouseleave', function() {
                        var allCircles = svg.querySelectorAll('circle:not(:first-child)');
                        allCircles.forEach(function(c) { c.style.opacity = '1'; });
                        circle.setAttribute('stroke-width', '20');
                        centerLabel.textContent = 'Total Spent';
                        centerAmount.textContent = '$' + total.toFixed(0);
                        centerAmount.style.color = 'var(--accent-red)';
                    });
                })(d.name, d.value, catInfo.color);
                
                svg.appendChild(circle);
                offset += length;
            });

            var legendHtml = '';
            sortedData.forEach(function(d) {
                var catInfo = categoryColors[d.name] || { color: 'var(--text-muted)' };
                var percent = ((d.value / total) * 100).toFixed(1);
                legendHtml += '<div class="legend-item"><div class="legend-color" style="background: ' + catInfo.color + ';"></div><div class="legend-name">' + d.name + '</div><div class="legend-value">$' + d.value.toFixed(0) + '</div><div class="legend-percent">' + percent + '%</div></div>';
            });
            legend.innerHTML = legendHtml;
        }

        document.querySelectorAll('.month-tab').forEach(function(tab) {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.month-tab').forEach(function(t) { t.classList.remove('active'); });
                document.querySelectorAll('.month-content').forEach(function(c) { c.classList.remove('active'); });
                tab.classList.add('active');
                document.getElementById(tab.dataset.month).classList.add('active');
            });
        });

        document.querySelectorAll('.filter-tab').forEach(function(tab) {
            tab.addEventListener('click', function() {
                var month = tab.dataset.month;
                document.querySelectorAll('.filter-tab[data-month="' + month + '"]').forEach(function(t) { t.classList.remove('active'); });
                tab.classList.add('active');
                if (month === 'jan') renderTransactions('jan-transactions', januaryTransactions, tab.dataset.filter);
                else renderTransactions('feb-transactions', februaryTransactions, tab.dataset.filter);
            });
        });

        // Initialize
        var janMaxTotal = Math.max.apply(null, Object.values(januaryCategoryData).map(function(d) { return d.total; }));
        renderCategories('jan-categories', januaryCategoryData, janMaxTotal);
        renderTransactions('jan-transactions', januaryTransactions, 'all');
        renderDonut('jan-donut', 'jan-legend', januaryCategoryData);

        var febMaxTotal = Math.max.apply(null, Object.values(februaryCategoryData).map(function(d) { return d.total; }));
        renderCategories('feb-categories', februaryCategoryData, febMaxTotal);
        renderTransactions('feb-transactions', februaryTransactions, 'all');
        renderDonut('feb-donut', 'feb-legend', februaryCategoryData);
    </script>
</body>
</html>
